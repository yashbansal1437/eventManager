  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/**",
      "!src/server.js",
      "!src/middleware/logger.js",
      "!src/middleware/requestLogger.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 85,
        "statements": 85
      }
    },
    "setupFiles": [
      "<rootDir>/tests/env.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
